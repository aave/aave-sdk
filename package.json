{
  "name": "aave-sdk",
  "version": "0.0.0",
  "description": "The quickest way to build on Aave Protocol",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22",
    "pnpm": ">=9.15.4"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo watch build",
    "clean": "rimraf .turbo packages/*/dist",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "new:package": "NODE_OPTIONS='--import tsx' plop --plopfile=plopfile.ts",
    "prepublish": "pnpm run build",
    "publish:results": "tsx scripts/publishResults.ts",
    "test:client": "vitest --project client",
    "test:client:local": "ENVIRONMENT=local vitest --project client",
    "test:privy": "vitest --project client packages/client/src/privy.test.ts",
    "test:react": "vitest --project react",
    "test:userHistory": "vitest --project client packages/client/src/actions/history.test.ts",
    "test:889": "vitest --project client packages/client/src/actions/supply.test.ts -t \"Then it should allow the user to supply tokens to the Reserve\"",
    "test:borrowEth": "vitest --project client packages/client/src/actions/borrow.test.ts -t \"Then it should be possible to borrow native from the reserve\"",
    "test": "vitest"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.0.7",
    "@vitest/ui": "^3.2.4",
    "@aws-sdk/client-s3": "^3.855.0",
    "jest-extended": "^6.0.0",
    "plop": "^4.0.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0"
    }
  },
  "packageManager": "pnpm@9.15.4"
}
